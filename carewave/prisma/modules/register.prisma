model UserRegistration {
  id           String         @id @default(uuid())
  email        String         @unique
  firstName    String
  lastName     String
  role         UserRole       @default(PATIENT)
  passwordHash String
  createdAt    DateTime       @default(now())
  updatedAt    DateTime       @updatedAt
  patient      Patient?
  refreshTokens RefreshToken[] // Add relation to refresh tokens
}

model RefreshToken {
  id        String   @id @default(uuid())
  token     String   @unique
  userId    String
  user      UserRegistration @relation(fields: [userId], references: [id], onDelete: Cascade)
  expiresAt DateTime
  createdAt DateTime @default(now())
}

enum UserRole {
  PATIENT
  DOCTOR
  NURSE
  LAB_TECHNICIAN
  PHARMACIST
  RECEPTIONIST
  RADIOLOGIST
  SURGEON
  ADMIN
  STAFF
  ACCOUNTANT
  BILLING_OFFICER
  HOSPITAL_MANAGER
  IT_SUPPORT
  CLEANING_STAFF
  SECURITY
}